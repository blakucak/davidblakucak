html(lang='en')
  // <![endif]
  // BEGIN HEAD
  head
    meta(charset='utf-8')
    title Dynamic Table
    meta(content='width=device-width, initial-scale=1.0', name='viewport')
    meta(content='', name='description')
    meta(content='', name='author')
    link(href='../assets/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='../assets/bootstrap/css/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='../assets/bootstrap/css/bootstrap-fileupload.css', rel='stylesheet')
    link(href='../assets/font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='../css/style.css', rel='stylesheet')
    link(href='../css/style-responsive.css', rel='stylesheet')
    link#style_color(href='../css/style-default.css', rel='stylesheet')
    link(href='../assets/fancybox/source/jquery.fancybox.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='../assets/uniform/css/uniform.default.css')
  // END HEAD
  // BEGIN BODY
  body.fixed-top
    // BEGIN HEADER
    #header.navbar.navbar-inverse.navbar-fixed-top
      // BEGIN TOP NAVIGATION BAR
      .navbar-inner
        .container-fluid
          // BEGIN LOGO
          a.brand(href='')
            img(src='../img/logo.png', alt='Metro Lab')
          // END LOGO
          // BEGIN RESPONSIVE MENU TOGGLER
          a#main_menu_trigger.btn.btn-navbar.collapsed(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
            span.arrow
          // END RESPONSIVE MENU TOGGLER
          // END  NOTIFICATION
          .top-nav
            ul.nav.pull-right.top-menu
              li.dropdown
                a.dropdown-toggle(href='/admin/logout')
                  span.username LOGOUT
                  i.icon-off
              // END USER LOGIN DROPDOWN
            // END TOP NAVIGATION MENU
      // END TOP NAVIGATION BAR
    // END HEADER
    // BEGIN CONTAINER
    #container.row-fluid
      // BEGIN SIDEBAR
      .sidebar-scroll
        #sidebar.nav-collapse.collapse
          // BEGIN SIDEBAR MENU
          ul.sidebar-menu
            li.sub-menu
              a(href='/admin')
                i.icon-home
                span Home
            li.sub-menu
              a(href='/admin/upload')
                i.icon-book
                span Upload
            li.sub-menu
              a(href='/admin/manage')
                i.icon-cogs
                span Manage File
            li.sub-menu.active
              a(href='/admin/user')
                i.icon-th
                span Manage User
          // END SIDEBAR MENU
      // END SIDEBAR
      // BEGIN PAGE
      #main-content
        // BEGIN PAGE CONTAINER
        .container-fluid
          // BEGIN PAGE HEADER
          .row-fluid
            .span12
              // BEGIN THEME CUSTOMIZER
              #theme-change.hidden-phone
                i.icon-cogs
                span.settings
                  span.text Theme Color:
                  span.colors
                    span.color-default(data-style='default')
                    span.color-green(data-style='green')
                    span.color-gray(data-style='gray')
                    span.color-purple(data-style='purple')
                    span.color-red(data-style='red')
              // END THEME CUSTOMIZER
              // BEGIN PAGE TITLE & BREADCRUMB
              h3.page-title
                | EDIT USER
              // END PAGE TITLE & BREADCRUMB
          // END PAGE HEADER
          // BEGIN ADVANCED TABLE widget
          .row-fluid
            .span12
              // BEGIN EXAMPLE TABLE widget
              .widget.red
                .widget-title
                  h4
                    i.icon-reorder
                    |  Dynamic Table
                .widget-body
                  table#sample_1.table.table-striped.table-bordered
                    thead
                      tr
                        th NIM
                        th Nama
                        th Status
                        th Aksi
                    tbody
                      each row in data
                        tr
                          td #{row.nim}
                          td #{row.nama}
                          td #{row.status}
                          td
                            a(href='/admin/editUser/#{row.nim}')
                              button.btn.btn-success
                                i.icon-pencil
                            a(href='/admin/deleteUser/#{row.nim}', onclick="return confirm_click();")
                              button.btn.btn-danger
                                i.icon-trash
              // END EXAMPLE TABLE widget
          // END ADVANCED TABLE widget
        // END PAGE CONTAINER
      // END PAGE
    // END CONTAINER
    // BEGIN FOOTER
    #footer
      | 2013 &copy; Metro Lab Dashboard.
    // END FOOTER
    // BEGIN JAVASCRIPTS
    // Load javascripts at bottom, this will reduce page load time
    script(src='../js/jquery-1.8.3.min.js')
    script(src='../js/jquery.nicescroll.js', type='text/javascript')
    script(src='../assets/bootstrap/js/bootstrap.min.js')
    script(src='../js/jquery.blockui.js')
    // ie8 fixes
    //if lt IE 9
      script(src='../js/excanvas.js')
      script(src='../js/respond.js')
    script(type='text/javascript', src='../assets/uniform/jquery.uniform.min.js')
    script(type='text/javascript', src='../assets/data-tables/jquery.dataTables.js')
    script(type='text/javascript', src='../assets/data-tables/DT_bootstrap.js')
    script(src='../js/jquery.scrollTo.min.js')
    // common script for all pages
    script(src='../js/common-scripts.js')
    // script for this page only
    script(src='../js/dynamic-table.js')
    script(type='text/javascript').
      function confirm_click(){
      return confirm("Apakah anda yakin akan menghapus user ini ?");
      }
    // END JAVASCRIPTS
  // END BODY
