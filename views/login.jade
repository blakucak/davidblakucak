doctype html
html(lang='en')
  // BEGIN HEAD
  head
    meta(charset='utf-8')
    title Login
    meta(content='width=device-width, initial-scale=1.0', name='viewport')
    meta(content='', name='description')
    meta(content='', name='author')
    link(href='assets/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='assets/bootstrap/css/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='assets/font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    link(href='css/style-responsive.css', rel='stylesheet')
    link#style_color(href='css/style-default.css', rel='stylesheet')
  // END HEAD
  // BEGIN BODY
  body.lock
    .lock-header
      // BEGIN LOGO
      a#logo.center(href='index.html')
        img.center(alt='logo', src='img/logo.png')
      // END LOGO
    .login-wrap
      form(method='POST')
        .metro.double-size.green
          .input-append.lock-input
            input(type='text', name='nim' placeholder='NIM')
        .metro.double-size.yellow
          .input-append.lock-input
            input(type='password', name='password' placeholder='Password')
        .metro.single-size.terques.login
          button.btn.login-btn(type='submit')
            | Login
            i.icon-long-arrow-right
      .metro.single-size.red.register
        form(action='register')
          button.btn.login-btn(type='submit')
            | Register
            i.icon-pencil
      | #{pesan}
  // END BODY
